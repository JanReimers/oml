#include "oml/matsub.h"
#include <cassert>

//-----------------------------------------------------------------------------
//
//  Changing size and/or limits.
//
template <class T,class A, Store M> void SetLimits(Indexable<T,A,M,Real,MatrixShape>& m,const MatLimits& theLimits, bool preserve)
{
  theLimits.Check();
  if (m.GetLimits()!=theLimits)
  {
    if (preserve)
    {
			A dest(theLimits);

      subsc_t newrowlow=theLimits.Row.Low, newrowhigh=theLimits.Row.High;
      subsc_t newcollow=theLimits.Col.Low, newcolhigh=theLimits.Col.High;
      subsc_t rowlow =Max(newrowlow ,m.GetLimits().Row.Low );   //Limits of old and new
      subsc_t rowhigh=Min(newrowhigh,m.GetLimits().Row.High);   //data overlap.
      subsc_t collow =Max(newcollow ,m.GetLimits().Col.Low );   //Limits of old and new
      subsc_t colhigh=Min(newcolhigh,m.GetLimits().Col.High);   //data overlap.

      typename A::Subscriptor sdest (dest);         //Destination subscriptor.

      for (subsc_t i=rowlow;i<=rowhigh;i++)
        for (subsc_t j=collow;j<=colhigh;j++)
          sdest(i,j)=m(i,j); //Transfer any overlaping data.

			static_cast<A&>(m)=dest;
		}
     else
    {
			static_cast<A&>(m)=A(theLimits);
    }
  }
}

template <class T,class A, Store M> void ReIndexRows(Indexable<T,A,M,Real,MatrixShape>& m,const Array<index_t>& index)
{
  assert(m.GetLimits().GetNumRows()==index.size());

  typename Array<index_t>::const_iterator i=index.begin();
  A dest(m.GetLimits());
  typename A::Subscriptor sdest(dest);

  for (int row=m.GetLimits().Row.Low;row<=m.GetLimits().Row.High;row++,i++)
  for (int col=m.GetLimits().Col.Low;col<=m.GetLimits().Col.High;col++)
  sdest(row,col)=m(*i+m.GetLimits().Row.Low,col);

  static_cast<A&>(m)=dest;
}

template <class T,class A, Store M> void ReIndexColumns(Indexable<T,A,M,Real,MatrixShape>& m,const Array<index_t>& index)
{
  assert(m.GetLimits().GetNumCols()==index.size());

  typename Array<index_t>::const_iterator i=index.begin();
  A dest(m.GetLimits());
  typename A::Subscriptor sdest(dest);

  for (int col=m.GetLimits().Col.Low;col<=m.GetLimits().Col.High;col++,i++)
    for (int row=m.GetLimits().Row.Low;row<=m.GetLimits().Row.High;row++)
      sdest(row,col)=m(row,*i+m.GetLimits().Col.Low);

  static_cast<A&>(m)=dest;
}

//-----------------------------------------------------------------------------
//
//  Swapping
//
template <class T, class A, Store M> void SwapRows(Indexable<T,A,M,Real,MatrixShape>& m, subsc_t i,subsc_t j)
{
  typename A::Subscriptor s(m);
  for (subsc_t c=m.GetLimits().Col.Low;c<=m.GetLimits().Col.High;c++)
  {
     T temp=s(i,c);
     s(i,c)=s(j,c);
     s(j,c)=temp;
  }
}

template <class T, class A, Store M> void SwapColumns(Indexable<T,A,M,Real,MatrixShape>& m,subsc_t i,subsc_t j)
{
  typename A::Subscriptor s(m);
  for (subsc_t r=m.GetLimits().Row.Low;r<=m.GetLimits().Row.High;r++)
  {
     T temp=s(r,i);
     s(r,i)=s(r,j);
     s(r,j)=temp;
  }
}

template <class T,class A, Store M> void SubMatrix (Indexable<T,A,M,Real,MatrixShape>& dest,const Indexable<T,A,M,Real,MatrixShape>& source)
{
	assert(dest.GetLimits().Row.Low >=source.GetLimits().Row.Low );
	assert(dest.GetLimits().Col.Low >=source.GetLimits().Col.Low );
	assert(dest.GetLimits().Row.High<=source.GetLimits().Row.High);
	assert(dest.GetLimits().Col.High<=source.GetLimits().Col.High);
	typename A::Subscriptor s(dest);
	subsc_t rh=dest.GetLimits().Row.High;
	subsc_t ch=dest.GetLimits().Col.High;
	for (subsc_t i=dest.GetLimits().Row.Low;i<=rh;i++)
		for (subsc_t j=dest.GetLimits().Col.Low;j<=ch;j++)
			s(i,j)=source(i,j);
}

template void SetLimits     (Indexable<Type,Mat,MatStore,Real,MatrixShape>&,const MatLimits&,bool);
template void ReIndexRows   (Indexable<Type,Mat,MatStore,Real,MatrixShape>&,const Array<index_t>& index);
template void ReIndexColumns(Indexable<Type,Mat,MatStore,Real,MatrixShape>&,const Array<index_t>& index);
template void SwapRows      (Indexable<Type,Mat,MatStore,Real,MatrixShape>& m,subsc_t i,subsc_t j);
template void SwapColumns   (Indexable<Type,Mat,MatStore,Real,MatrixShape>& m,subsc_t i,subsc_t j);
template void SubMatrix     (Indexable<Type,Mat,MatStore,Real,MatrixShape>& m,const Indexable<Type,Mat,MatStore,Real,MatrixShape>& old);

